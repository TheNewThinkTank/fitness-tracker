{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
      "date": {
          "type": "string",
          "format": "date"
      },
      "start_time": {
          "type": "string",
          "format": "HH:MM"
      },
      "end_time": {
          "type": "string",
          "format": "HH:MM"
      },
      "timezone": {
          "type": "string",
          "enum": [
            "CET",
            "CEST",
            "ICT",
            "GMT",
            "BST"
          ]
      },
      "split": {
          "type": "string",
          "enum": [
            "chest",
            "back",
            "arms_abs_calf",
            "pull",
            "push",
            "legs",
            "full_body",
            "other"
        ]
      },
      "gym": {
          "type": "string"
      },
      "warmup": {
          "type": "string"
      },
      "cooldown": {
        "type": "string"
    },
      "exercises": {
          "type": "object",
          "patternProperties": {
              "^[a-zA-Z0-9_]+$": {
                  "type": "array",
                  "items": {
                      "type": "object",
                      "properties": {
                          "set_number": {
                              "type": "integer"
                          },
                          "reps": {
                              "type": "integer"
                          },
                          "weight": {
                              "type": "string"
                          }
                      },
                      "required": ["set_number", "reps", "weight"]
                  }
              }
          },
          "additionalProperties": false
      }
  },
  "required": ["date", "start_time", "end_time", "timezone", "split", "gym", "warmup", "exercises"]
}
